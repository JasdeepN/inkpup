# Local environment variables
# Copy this to .env and edit as needed

PORT=3002
PLAYWRIGHT_BASE_URL=http://localhost:3002
NODE_ENV=development
# Optional: custom hostname for the Cloudflare R2 public bucket (no trailing slash)
# Example: https://static.example.com or https://your-account.r2.cloudflarestorage.com/bucket-name
R2_PUBLIC_HOSTNAME=
## Server-side R2 credentials (for signed URLs)
# These are secrets and must NOT be committed to source control. Set them in your deploy environment.
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ACCOUNT_ID=
R2_BUCKET=

# Admin portal configuration
ADMIN_PORTAL_SLUG=
ADMIN_PORTAL_PASSWORD=
ADMIN_SESSION_SECRET=
# Optional overrides
ADMIN_SESSION_COOKIE_NAME=
ADMIN_SESSION_TTL_HOURS=
R2_MAX_IMAGE_WIDTH=
